@page "/product/edit/updatestock/{Id}"

@using System.Text.Json
@using System.Text
@using jbH60Manager.Models;
@using Microsoft.AspNetCore.Components.Forms
@inject HttpClient httpClient
@inject IJSRuntime JSRuntime
@inject NavigationManager navigate

@if (product == null)
{
    <p>Loading...</p>
}
else
{
    <div>
        <a class="btn-pink p-2" href="/product/@product.ProductId">Back to Product</a>
    </div>


    <div class="row">
        <div class="col-md-4 edit-form-container">
            <h1>Edit</h1>
            <h4>Product</h4>
            <hr />
            <div>
                <h5>@product.Description - @product.Manufacturer</h5>
            </div>
            <div class="form-group">
                <EditForm Model="@product" OnValidSubmit="SubmitForm">
                    <DataAnnotationsValidator />
                    <ValidationSummary />
                    <label for="NewStock">New Stock Amount:</label>
                    <InputNumber @bind-Value="@product.Stock" id="NewStock" name="NewStock" class="form-control" min="0" />

                    <div class="form-group">
                       
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public string Id { get; set; }

    private Product product { get; set; }

    protected override async Task OnInitializedAsync()
    {
        product = await httpClient.GetFromJsonAsync<Product>($"http://localhost:5076/api/Products/{Id}");
    }

    private async Task SubmitForm()
    {
     
        if ( product.Stock < 0)
        {
            await JSRuntime.InvokeVoidAsync("alert", "Stock must be a positive number.");
            return;
        }

        var updateData = new
        {
            NewStock = product.Stock
        };
        var jsonContent = new StringContent(JsonSerializer.Serialize(updateData), Encoding.UTF8, "application/json");
        var response = await httpClient.PatchAsync($"http://localhost:5076/api/Products/UpdateStock/{Id}", jsonContent);

        if (response.IsSuccessStatusCode)
        {
            navigate.NavigateTo($"/product/{product.ProductId}");
        }
    }
}
