@page
@model RegisterModel

@{
    ViewData["Title"] = "Register";
}

@* <h1>@ViewData["Title"]</h1> *@

<div class="row">

    <fieldset>

        <div class="">
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h2 class="text-light">Create a new account</h2>
                <hr />

                @if (User.IsInRole("Manager"))
                {
                    <label class="text-light" asp="Roles">What role do you want to assign to this user?</label>
                    <select name="Roles">
                        @foreach (var item in Model.ListRoles)
                        {
                            <option value="@item.Name.ToUpper()">@item.Name</option>
                        }
                    </select>
                }



                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating p-2">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating p-2">
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                    <label asp-for="Input.Password"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-floating p-2">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                    <label asp-for="Input.ConfirmPassword"></label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
            </form>


        </div>
    </fieldset>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
