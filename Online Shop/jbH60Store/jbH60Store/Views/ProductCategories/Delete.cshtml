@model jbH60Store.Models.ProductCategory

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="delete-page-container">
    <h1>Delete</h1>

    <h4>Are you sure you want to delete this Product Category?</h4>
    
    <hr />
    <dl class="row">
        <dt class="col-sm-10">
            @Html.DisplayNameFor(model => model.ProdCat)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProdCat)
        </dd>
        <dt class="col-sm-10 text-danger">
            Deletion will remove all  <span>@ViewData["ProductCount"]</span> products associated to it
        </dt>
     

    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="CategoryId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="AllProductCategoriesSortedByCategory">Back to List</a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}