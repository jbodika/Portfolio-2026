@model jbH60Store.Models.ProductCategory

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-md-4">
     
        <form asp-action="Edit" class="edit-form-container">
            <h1>Edit</h1>

            <h4>ProductCategory</h4>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CategoryId" />

            <div class="form-group">
                <label asp-for="ProdCat" class="control-label form-label"></label>
                <input asp-for="ProdCat" class="form-control" />
                <span asp-validation-for="ProdCat" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Save" class="btn btn-primary" /><a asp-action="AllProductCategoriesSortedByCategory"> | Back to List</a>
            </div>
                
            
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}