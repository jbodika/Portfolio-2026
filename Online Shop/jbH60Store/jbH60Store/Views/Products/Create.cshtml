@model jbH60Store.Models.Product

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    <a class="btn-pink p-2 float-start" asp-action="AllProductInformation" asp-controller="Products">Back to List</a>
</div>
<div class="col-md-10">
   
    <div class="row">
        <form asp-action="Create" class="edit-form-container" enctype="multipart/form-data">
            <h1>Create</h1>

            <h4>Product</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <input asp-for="ProdCat.CategoryId" value="Test" type="hidden" />
                <label asp-for="ProdCat" class="control-label"></label>
                <select asp-for="ProdCatId" class="form-control" asp-items="ViewBag.ProdCatId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Manufacturer" class="control-label"></label>
                <input asp-for="Manufacturer" class="form-control" />
                <span asp-validation-for="Manufacturer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stock" class="control-label"></label>
                <input asp-for="Stock" class="form-control" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BuyPrice" class="control-label"></label>
                <input asp-for="BuyPrice" class="form-control" />
                <span asp-validation-for="BuyPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SellPrice" class="control-label"></label>
                <input asp-for="SellPrice" class="form-control" />
                <span asp-validation-for="SellPrice" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EmployeeNotes" class="control-label"></label>
                <textarea asp-for="EmployeeNotes" rows="5" class="form-control"></textarea>
                <span asp-validation-for="EmployeeNotes" class="text-danger"></span>
            </div>    
            <div class="form-group p-2">
                <input type="file" asp-for="Image" name="imageFile" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary mt-2" />
            </div>

       
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
