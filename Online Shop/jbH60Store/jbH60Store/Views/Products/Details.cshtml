@model jbH60Store.Models.Product

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div>
    <a class="btn-pink p-2 float-start" asp-action="AllProductInformation" asp-controller="Products">Back to List</a>
</div>
<div class="edit-form-container">
    <h1>@Model.Description</h1>
    @if (Model.Image != null)
    {
        <div class="text-center">
            <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Image)" height="150" width="150" alt="Image of @Model.Description" />

           </div>
           


    }
    <hr />
    <dl class="row">
      
        <dt class="col-sm-10">
            @Html.DisplayNameFor(model => model.Manufacturer)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Manufacturer)
        </dd>
        <dt class="col-sm-10">
            @Html.DisplayNameFor(model => model.ProdCat.ProdCat)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProdCat.ProdCat)
        </dd>
        <dt class="col-sm-10 @((Model.Stock==0)?"text-danger":"")">
            @Html.DisplayNameFor(model => model.Stock)
        </dt>
        
        <dd class="col-sm-10 @((Model.Stock==0)?"text-danger":"")">
            @Html.DisplayFor(model => model.Stock)
        </dd>
        <dt class="col-sm-10">
            @Html.DisplayNameFor(model => model.BuyPrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BuyPrice)$
        </dd>
        <dt class="col-sm-10">
            @Html.DisplayNameFor(model => model.SellPrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SellPrice)$
        </dd>
    
        <dt class="col-sm-10">
            @Html.DisplayNameFor(model => model.EmployeeNotes)
        </dt>
        <dd class="col-sm-10">
            <textarea rows="3" cols="30" disabled> @Html.DisplayFor(model => model.EmployeeNotes)</textarea>
           @*  @Html.DisplayFor(model => model.EmployeeNotes) *@
        </dd>

 
      
    </dl>
    
    
    <div>
        <a asp-action="Edit" asp-route-id="@Model?.ProductId" class="btn-edit p-2 text-black"> <img alt="edit pen" src="~/images/edit.png"/> Edit</a>
    
    </div>
</div>

